[
  {
    "context": "Workspace || Editor || Terminal",
    "bindings": {
      "f8": ["task::Spawn", { "task_name": "autobuild check" }],
      "f9": ["task::Spawn", { "task_name": "autobuild release" }],
      "f10": ["task::Spawn", { "task_name": "autobuild debug" }],
      "f11": ["task::Spawn", { "task_name": "cargo test function" }],
      "f12": "task::Spawn",
      "ctrl-y": "terminal_panel::ToggleFocus",
      "ctrl-tab": "terminal_panel::ToggleFocus",
      "ctrl-a z": "workspace::ToggleZoom",
      "ctrl-w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-t": ["workspace::SendKeystrokes", "-"],
      "alt-f": null,
      "alt-h": null,
      "alt-z": null,
      "alt-d": null,
      "alt-l": null,
      "alt-n": null,
      "alt-b": null,
      "alt-v": null
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-t": "pane::GoBack",
      "g r": "editor::FindAllReferences",
      "space f": "file_finder::Toggle",
      "enter f": "file_finder::Toggle",
      "space c c": "editor::ToggleComments",
      "enter c c": "editor::ToggleComments",
      "space c f": "editor::Format",
      "enter c f": "editor::Format",
      "space c a": "editor::ToggleCodeActions",
      "enter c a": "editor::ToggleCodeActions",
      "space c h": "editor::Hover",
      "enter c h": "editor::Hover",
      "space c d": "diagnostics::Deploy",
      "enter c d": "diagnostics::Deploy",
      "space c r": "editor::Rename",
      "enter c r": "editor::Rename",
      "space p": "editor::Paste",
      "enter p": "editor::Paste",
      "space /": "workspace::NewSearch",
      "enter /": "workspace::NewSearch",
      "space tab": "pane::AlternateFile",
      "enter tab": "pane::AlternateFile",
      "space t t": "workspace::ToggleRightDock",
      "enter t t": "workspace::ToggleRightDock",
      "space space": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "space c c": "editor::ToggleComments",
      "enter c c": "editor::ToggleComments",
      "space y": "editor::Copy",
      "enter y": "editor::Copy"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-w": "pane::CloseActiveItem",
      "alt-x": ["workspace::SendKeystrokes", "â‚¬"],
      "alt-v": ["workspace::SendKeystrokes", "_"],
      "alt-l": ["workspace::SendKeystrokes", "["],
      "alt-8": ["workspace::SendKeystrokes", "["],
      "alt-c": ["workspace::SendKeystrokes", "]"],
      "alt-9": ["workspace::SendKeystrokes", "]"],
      "alt-w": ["workspace::SendKeystrokes", "^"],
      "alt-k": ["workspace::SendKeystrokes", "!"],
      "alt-h": ["workspace::SendKeystrokes", "<"],
      "alt-g": ["workspace::SendKeystrokes", ">"],
      "alt-f": ["workspace::SendKeystrokes", "="],
      "alt-q": ["workspace::SendKeystrokes", "@"],
      "alt-u": ["workspace::SendKeystrokes", "\\"],
      "alt-i": ["workspace::SendKeystrokes", "/"],
      "alt-a": ["workspace::SendKeystrokes", "{"],
      "alt-7": ["workspace::SendKeystrokes", "{"],
      "alt-e": ["workspace::SendKeystrokes", "}"],
      "alt-0": ["workspace::SendKeystrokes", "}"],
      "alt-o": ["workspace::SendKeystrokes", "*"],
      "alt-s": ["workspace::SendKeystrokes", "?"],
      "alt-n": ["workspace::SendKeystrokes", "("],
      "alt-r": ["workspace::SendKeystrokes", ")"],
      "alt-t": ["workspace::SendKeystrokes", "-"],
      "alt-d": ["workspace::SendKeystrokes", ":"],
      "alt-y": ["workspace::SendKeystrokes", "@"],
      "alt-p": ["workspace::SendKeystrokes", "~"],
      "alt-z": ["workspace::SendKeystrokes", "`"],
      "alt-b": ["workspace::SendKeystrokes", "+"],
      "alt-m": ["workspace::SendKeystrokes", "%"],
      "alt-,": ["workspace::SendKeystrokes", "\""],
      "alt-.": ["workspace::SendKeystrokes", "'"],
      "alt-j": ["workspace::SendKeystrokes", ";"],
      "alt-<": ["workspace::SendKeystrokes", "|"],
      "ctrl-l": "terminal::Clear",
      "ctrl-b": ["workspace::SendKeystrokes", "shift-left"],
      "ctrl-h": ["workspace::SendKeystrokes", "alt-backspace"],
      "ctrl-n": ["workspace::SendKeystrokes", "home"],
      "ctrl-e": ["workspace::SendKeystrokes", "end"]
    }
  }
]
