{
  "features": {
    "inline_completion_provider": "none"
  },
  "theme": "One Dark",
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "current_line_highlight": "none",
  "relative_line_numbers": true,
  "format_on_save": "off",
  "ensure_final_newline_on_save": false,
  "terminal": {
    "option_as_meta": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  }
}
