{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "theme": "Catppuccin Frapp√©",
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_smartcase_find": true
  },
  "search": {
    "regex": true,
    "case_sensitive": false
  },
  "tab_bar": {
    "show": false
  },
  "soft_wrap": "editor_width",
  "current_line_highlight": "none",
  "relative_line_numbers": true,
  "format_on_save": "off",
  "ensure_final_newline_on_save": false,
  "terminal": {
    "option_as_meta": false,
    "detect_venv": {
      "on": {
        "activate_script": "fish"
      }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "auto_install_extensions": {
    "html": false
  },
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    },
    "TypeScript": {
      "tab_size": 4
    },
    "LaTeX": {
      "language_servers": ["texlab", "ltex", "..."]
    },
    "HTML": {
      "enable_language_server": false
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  }
}
